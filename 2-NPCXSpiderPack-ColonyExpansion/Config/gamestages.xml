<configs>

	<append xpath="/gamestages">

<!-- Single Groups -->
	<group name="SpiderPack_b" spawner="SleeperSpiderPack_b"/>
	<group name="SpiderPack_Feral" spawner="SleeperSpiderPack_Feral"/>	

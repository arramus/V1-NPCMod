<configs>
	<append xpath="/items">
	
		<item name="meleeHandAnimalSpiderFeral">
			<property name="Extends" value="meleeHandAnimalTemplate"/>
			<property name="CreativeMode" value="None"/>
			<property name="HoldType" value="35"/>
			<property class="Action0">
				<property name="Delay" value=".7"/> <!-- obsolete if rounds per minute exists -->
				<property name="Range" value="1.65"/>
				<property name="DamageEntity" value="23"/> <!-- approximately x 0.5 of base as x 2.0 default of Arlene from 10 to 20 is quite high -->
				<property name="DamageBlock" value="12"/> <!-- x 3 of base as default of 24 from 8 from Arlene -->
				<property name="Buff" value="buffFeralSpiderBite"/>
			</property>
		</item>	
		<item name="meleeHandAnimalSpiderQueen">
			<property name="Extends" value="meleeHandAnimalTemplate"/>
			<property name="CreativeMode" value="None"/>
			<property name="HoldType" value="35"/>
			<property class="Action0">
				<property name="Delay" value=".6"/> <!-- Queen -->
				<property name="Range" value="1.75"/>
				<property name="DamageEntity" value="25"/> <!-- Queen with minimal increase but lower delay -->
				<property name="DamageBlock" value="50"/> <!-- Queen -->
				<property name="Buff" value="buffQueenSpiderBite"/>
			</property>
			
		</item>		
	</append>	  
</configs>